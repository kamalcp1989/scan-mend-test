{
  "timestamp": {
    "$resolver": "timestamp"
  },
  "applicationDomain" : {
    "$resolver": "main",
    "key": "applicationDomain"
  },
  "applicationName" : {
    "$resolver": "main",
    "key": "applicationName"
  },
  "applicationVersion" : {
    "$resolver": "main",
    "key": "applicationVersion"
  },
  "loggerName": {
    "$resolver": "logger",
    "field": "name"
  },
  "level": {
    "$resolver": "level",
    "field": "name"
  },
  "host": "${hostName}",
  "thread": {
    "$resolver": "thread",
    "field": "name"
  },
  "mappedContext": {
    "$resolver": "mdc"
  },
  "nestedContext" : {
    "$resolver": "ndc"
  },
  "message": {
    "$resolver": "message",
    "fallbackKey": "asString"
  },
  "exception": {
    "exception_class": {
      "$resolver": "exception",
      "field": "className"
    },
    "exception_message": {
      "$resolver": "exception",
      "field": "message"
    },
    "stacktrace": {
      "$resolver": "exception",
      "field": "stackTrace"
    }
  },
  "exceptionRootCause": {
    "exception_class": {
      "$resolver": "exceptionRootCause",
      "field": "className"
    },
    "exception_message": {
      "$resolver": "exceptionRootCause",
      "field": "message"
    },
    "stacktrace": {
      "$resolver": "exceptionRootCause",
      "field": "stackTrace"
    }
  }
}
